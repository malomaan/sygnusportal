@model SygnusportalBD.Ciudad

@{
    ViewBag.Title = "Details";
}

<p>
    <h2>Ciudad Detalles</h2>
</p>

<ul class="nav nav-tabs">
    <li><a href="@Url.Action("Index")"><i class="far fa-list-alt"></i> Paises</a></li>
    <li class="active"><a href="@Url.Action("Details",new { id = Model.ciu_codigo })"><i class="far fa-file"></i> Nuevo</a></li>
</ul>
<div class="panel-group">
    <div class="panel panel-success">
        <div class="panel-body">
            <p></p>
            <div>
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.ciu_nombre)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.ciu_nombre)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.ciu_capital)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.ciu_capital)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Departamento.dep_nombre)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Departamento.dep_nombre)
                    </dd>

                </dl>
            </div>
        </div>
        <div class="panel-footer">
            <a class='btn btn-success btn-sm' href="@Url.Action("Edit",new { id = Model.ciu_codigo })">
                <span class="glyphicon glyphicon-edit"></span> Editar
            </a>
            <a class='btn btn-danger btn-sm' href="@Url.Action("Index")">
                <span class="glyphicon glyphicon-remove"></span> Cancelar
            </a>
        </div>

    </div>
</div>