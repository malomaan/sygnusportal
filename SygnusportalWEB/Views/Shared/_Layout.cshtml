<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="https://fonts.googleapis.com/css?family=Cairo" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Saira+Semi+Condensed" rel="stylesheet">
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <img class="img-logo" src="~/Content/Imagenes/SoloLogoBrujula.fw.png" alt="" />
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="~/Home/Index"><span class="fas fa-home  fa-2x icon-menu11"></span> Inicio</a></li>
                    @if (!Request.IsAuthenticated)
                    {
                        <li><a href="~/Home/Habilitadas"><span class="fas fa-check-circle  fa-2x icon-menu5"></span> Habilitadas</a></li>
                        <li class="dropdown uno">
                            <a href="" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><span class="fas fa-globe-africa fa-2x icon-menu2"></span> Tipo Pagaduría <span class="glyphicon glyphicon-chevron-down icon-menu-derecha"></span></a>
                            <ul class="dropdown-menu">
                                @foreach (var item in ViewBag.Tipo)
                                {
                                    <li><a href="~/Home/Tipos/@item.tpa_id"><span class="fas fa-check icon-menu"></span> @item.tpa_descripcion</a></li>

                                }
                            </ul>
                        </li>
                    }
                    @if (Request.IsAuthenticated)
                    {
                        <li class="dropdown uno">
                            <a href="" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><span class="fab fa-whmcs fa-2x icon-menu1"></span> Configuracion <span class="glyphicon glyphicon-chevron-down icon-menu-derecha"></span></a>
                            <ul class="dropdown-menu">
                                <li><a href="~/Pais/Index"><span class="glyphicon glyphicon-wrench icon-menu"></span> Pais</a></li>
                                <li><a href="~/Departamentoes/Index"><span class="glyphicon glyphicon-shopping-cart icon-menu"></span> Departamento</a></li>
                                <li><a href="~/Ciudads/Index"><span class="glyphicon glyphicon-envelope icon-menu"></span> Ciudad</a></li>
                                <li role="separator" class="divider"></li>
                                <li><a href="~/TipoPagadurias/Index"><span class="glyphicon glyphicon-briefcase icon-menu"></span> Tipo Pagadurías</a></li>
                            </ul>
                        </li>
                        <li><a href="~/Empresas/Index"><span class="fas fa-hotel fa-2x icon-menu5"></span> Empresa</a></li>
                        <li><a href="~/Pagadurias/Index"><span class="fas fa-coins fa-2x icon-menu0"></span> Pagadurías</a></li>
                    }
                </ul>
                <form class="navbar-form navbar-left">
                    <div class="form-group">
                        <input type="text" id="Id" name="Id" class="form-control" placeholder="Buscar Pagaduría">
                    </div>
                    <button type="submit" id="btnSubmit" class="btn btn-primary btn-sm"><span class="glyphicon glyphicon-search"></span> Buscar</button>
                </form>
                <ul class="nav navbar-nav navbar-right">

                    <li><a href="~/Home/About"><span class="fas fa-info-circle fa-2x icon-menu1"></span> About</a></li>
                    @if (!Request.IsAuthenticated)
                    {

                        <li><a href="~/Account/Login"><span class="fas fa-lock fa-2x icon-menu3"></span> Iniciar Sesión</a></li>
                    }

                    @Html.Partial("_LoginPartial")
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
    </div>
    <div id="divLoader" class="modal fade in Loading" role="dialog" style="display:none;">
        <center class="centrado">
            <h2>Procesando..</h2>
            <p></p>
            <img src="~/Content/Imagenes/Loading.gif" alt="Loader" />
        </center>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

